<resources>

    <!-- Base application theme. -->
    <style name="ChecksAndBalances" parent="Theme.MaterialComponents.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>



        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="actionMenuTextColor">@color/colorControlNormal</item>
        <item name="android:statusBarColor">?android:colorBackground</item>

        <item name="android:navigationBarColor">@color/colorSecondary</item>
        <item name="navigationIcon">@drawable/ic_menu_dark_24dp</item>
        <item name="colorControlHighlight">@color/menu_item_color</item>
        <item name="selectableItemBackground">@android:color/transparent</item>

        <item name="android:fontFamily">sans-serif-light</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textViewStyle">@style/RobotoThinTextView</item>
        <item name="buttonStyle">@style/RobotoThinTextView</item>
        <item name="android:editTextStyle">@style/RobotoThinTextView</item>
    </style>

    <style name="CABBottomSheet" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>
